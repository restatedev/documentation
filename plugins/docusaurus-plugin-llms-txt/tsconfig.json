// tsconfig.json  (plugin root)
{
  "extends": "@docusaurus/tsconfig",
  "compilerOptions": {
    /* Emit settings */
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "noEmit": false,            // override the base

    "lib": ["ES2022"],

    /* Type roots */
    "types": ["node"],
    
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}